            android:layout_height="200dp"
            android:background="@drawable/esquinas"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/tituloPagos"
            android:layout_alignLeft="@+id/datosPersonales"
            android:layout_alignStart="@+id/datosPersonales"
            android:layout_alignRight="@+id/datosPersonales"
            android:layout_alignEnd="@+id/datosPersonales">
         <TextView
             android:layout_width="100dp"
             android:layout_height="25dp"
             android:textColor="@color/black"
             android:text="@string/fechaPagos"
             android:textSize="20sp"
             android:textStyle="bold"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             />
            <TextView
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:textColor="@color/black"
                android:text="@string/transaccion"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/fechaPagoR1"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fechaPagoR2"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textoPagoR2"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="80dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textoPagoR3"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="110dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fechaPagoR3"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="110dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textoPagoR1"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/datosPersonales"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/esquinas"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@mipmap/user"/>
            <TextView
                android:id="@+id/bienvenido"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:text="@string/bienvenenida"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/nombrecompleto"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:text="Arturo Michelena"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/tituloSaldo"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:layout_width="200dp"
                android:text="@string/saldoBancario"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/titulDeuda"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="120dp"
                android:layout_width="200dp"
                android:text="@string/deudasTarjetas"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/saldotarjetas"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="145dp"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:text="0 Bs."
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/saldoactual"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="98dp"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:text="0 Bs."
                android:textColor="@color/black"
                android:textSize="15sp"
                />

        </android.support.v7.widget.CardView>


        <ImageButton
            android:layout_width="120dp"
            android:id="@+id/btnafiliaciones"
            android:background="@mipmap/bancos"
            android:layout_marginTop="20dp"
            android:layout_height="80dp"
            android:layout_below="@+id/datosPersonales"
            android:layout_alignLeft="@+id/datosPersonales"
            android:layout_alignStart="@+id/datosPersonales"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" />

        <ImageButton
            android:text="@string/aflTarjetas"
            android:layout_width="120dp"
            android:id="@+id/btntarjetas"
            android:background="@mipmap/tarjetas"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/btnafiliaciones"
            android:layout_alignRight="@+id/datosPersonales"
            android:layout_alignEnd="@+id/datosPersonales"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:text="@string/titulosProximosPagos"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/tituloproxPagos"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:layout_below="@+id/pagosrecientes"
            android:layout_alignLeft="@+id/pagosrecientes"
            android:layout_alignStart="@+id/pagosrecientes"
            android:layout_marginTop="24dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/proximospagos"
