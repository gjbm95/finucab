                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fechaPagoP2"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textoPagoP2"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="80dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fechaPagoP3"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="110dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textoPagoP3"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="110dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </android.support.v7.widget.CardView>

        <TextView
            android:text="@string/tituloPresupuestosRecientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:id="@+id/textView21"
            android:layout_below="@+id/proximospagos"
            android:layout_toLeftOf="@+id/btntarjetas"
            android:layout_toStartOf="@+id/btntarjetas" />

        <android.support.v7.widget.CardView
            android:id="@+id/presupuestosrecientes"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="@drawable/esquinas"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/textView21"
            android:layout_alignLeft="@+id/proximospagos"
            android:layout_alignStart="@+id/proximospagos">
            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:textColor="@color/black"
                android:text="@string/fechaPagos"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/textoPres1"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textoPres2"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="80dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fechaPres3"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="110dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textoPres3"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="110dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:textColor="@color/black"
                android:text="@string/nombrePresupuesto"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="15dp"
                android:id="@+id/textView23" />

            <TextView
                android:id="@+id/fechaPres1"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fechaPres2"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
