    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <RelativeLayout
        android:id="@+id/listado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignTop="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:text="@string/tituloBalanceEconomico"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/tituloBalanceEconomico"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/btntarjetas"
            android:layout_alignLeft="@+id/pagosrecientes"
            android:layout_alignStart="@+id/pagosrecientes" />

        <android.support.v7.widget.CardView
            android:id="@+id/balanceeconomico"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:background="@drawable/esquinas"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/tituloBalanceEconomico"
            android:layout_alignLeft="@+id/tituloBalanceEconomico"
            android:layout_alignStart="@+id/tituloBalanceEconomico">

            <TextView
                android:id="@+id/ingresoTextView"
                android:layout_width="140dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/ingresos"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/egresoTextView"
                android:layout_width="140dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:text="@string/egresos"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/egresosBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="90dp"
                android:progressTint="@color/red"
                tools:progressTint="@color/red" />

            <ProgressBar
                android:id="@+id/ingresosBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:progressTint="@color/green" />

        </android.support.v7.widget.CardView>

        <TextView
            android:text="@string/pagosRecientes"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/tituloPagos"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/balanceeconomico"
            android:layout_alignLeft="@+id/pagosrecientes"
            android:layout_alignStart="@+id/pagosrecientes" />

        <android.support.v7.widget.CardView
            android:id="@+id/pagosrecientes"
