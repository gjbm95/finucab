<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_agregar_categoria"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0895E0">

    <TextView

        android:id="@+id/agregarTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="@string/agregarCategoria"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="54dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView

        android:id="@+id/DescripcionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="@string/agregarDescripcion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="161dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/AgregarcategoriaEditText"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="@string/escribirCategoria"
        android:background="@drawable/rounded_white_border"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="96dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <EditText

        android:id="@+id/nombreEditText"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="@string/escribirDescripcion"
        android:background="@drawable/rounded_white_border"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="197dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button

        android:id="@+id/acceptButton"
        android:layout_width="126dp"
        android:layout_height="0dp"
        android:text="@string/aceptar"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="436dp"
        app:layout_constraintHorizontal_bias="0.937" />

    <Switch
        android:id="@+id/habilitarSwitch"
        android:layout_width="214dp"
        android:layout_height="16dp"
        android:visibility="visible"
        tools:layout_editor_absoluteY="297dp"
        tools:layout_editor_absoluteX="16dp" />

    <Switch
        android:id="@+id/tipoSwitch"
        android:layout_width="231dp"
        android:layout_height="31dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="260dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteY="363dp" />

    <TextView

        android:id="@+id/estadoTextView"
        android:layout_width="381dp"
        android:layout_height="27dp"
        android:layout_marginTop="259dp"
        android:text="@string/estado"
        android:textColor="#fff"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/TipoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="339dp"
        android:text="@string/tipo"
        android:textColor="#fff"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

