<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_agregar_transacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0895E0">

    <TextView

        android:id="@+id/agregarTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="@string/agregarCategoria"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="69dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView

        android:id="@+id/DescripcionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="@string/agregarDescripcion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="214dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView

        android:id="@+id/campoObligatorioTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#f44336"
        android:textSize="14sp"
        android:text="@string/campoObligatorio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="169dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView

        android:id="@+id/campoObligatorioDescripcionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#f44336"
        android:textSize="14sp"
        android:text="@string/campoObligatorioDes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="313dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText

        android:id="@+id/AgregarcategoriaEditText"

        android:layout_width="0dp"

        android:layout_height="47dp"

        android:layout_marginLeft="16dp"

        android:layout_marginRight="16dp"

        android:hint="@string/escribirCategoria"

        android:background="@drawable/rounded_white_border"

        android:textSize="14sp"

        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="114dp"

        app:layout_constraintHorizontal_bias="0.0"

        android:layout_marginStart="16dp"

        android:layout_marginEnd="16dp" />

    <EditText

        android:id="@+id/AddDescripcionEditText"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="@string/escribirDescripcion"
        android:background="@drawable/rounded_white_border"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="258dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button

        android:id="@+id/acceptButton"
        android:layout_width="126dp"
        android:layout_height="0dp"
        android:text="@string/aceptar"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="436dp"
        app:layout_constraintHorizontal_bias="0.937" />

    <Button

        android:id="@+id/backButton"
        android:layout_width="126dp"
        android:layout_height="0dp"
        android:text="@string/volver"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="436dp"
        app:layout_constraintHorizontal_bias="0.062" />

    <ToggleButton
        android:id="@+id/toggleButtonHabilitado"
        android:layout_width="126dp"
        android:layout_height="37dp"
        android:textOn="@string/habilitado"
        android:textOff="@string/deshabilitado"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/agregarTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/toggle_state"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="126dp" />

    <ToggleButton
        android:id="@+id/toggleButtonIngreso"
        android:layout_width="94dp"
        android:layout_height="38dp"
        android:textOn="@string/ingreso"
        android:textOff="@string/egreso"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/campoObligatorioDescripcionTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.152"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/toggle_state"


        tools:layout_editor_absoluteX="145dp"
        app:layout_constraintHorizontal_bias="0.501" />
</android.support.constraint.ConstraintLayout>

