<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/fragment_agregar_transacion"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="#0895E0"

    android:titleTextColor="#000">



    <TextView

        android:id="@+id/agregarTextView"

        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:textColor="#fff"

        android:textSize="20sp"

        android:text="@string/agregarCategoria"

        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="69dp"

        app:layout_constraintHorizontal_bias="1.0" />

    <TextView

        android:id="@+id/campoObligatorioTextView"

        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:textColor="#f44336"

        android:textSize="15sp"

        android:text="@string/campoObligatorio"

        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="171dp"

        app:layout_constraintHorizontal_bias="0.0" />

    <EditText

        android:id="@+id/AgregarcategoriaEditText"

        android:layout_width="0dp"

        android:layout_height="47dp"

        android:layout_marginLeft="16dp"

        android:layout_marginRight="16dp"

        android:hint="@string/escribirCategoria"

        android:background="@drawable/rounded_white_border"

        android:textSize="14sp"

        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="114dp"

        app:layout_constraintHorizontal_bias="0.0"

        android:layout_marginStart="16dp"

        android:layout_marginEnd="16dp" />

    <Button

        android:id="@+id/acceptButton"

        android:layout_width="126dp"

        android:layout_height="0dp"

        android:text="@string/aceptar"

        android:textSize="14sp"

        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="447dp"

        />

</android.support.constraint.ConstraintLayout>

