<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context="com.ucab.fin.finucab.fragment.ModificarCuentaFragment">

    <TextView

        android:id="@+id/nombreTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="@string/nombre"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText

        android:id="@+id/nombreEditText"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:digits="qwertzuiopasdfghjklyxcvbnñmQWERTYUIOPASDFGHJKLÑZXCVBNM"
        android:background="@drawable/rounded_white_border"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/nombreTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView

        android:id="@+id/apellidoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="@string/apellido"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/nombreEditText"
        app:layout_constraintHorizontal_bias="0.0"
        />

    <EditText

        android:id="@+id/apellidoEditText"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:digits="qwertzuiopasdfghjklyxcvbnñmQWERTYUIOPASDFGHJKLÑZXCVBNM"
        android:background="@drawable/rounded_white_border"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/apellidoTextView"
     />
    <TextView

        android:id="@+id/correoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="@string/correo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/apellidoEditText"
        app:layout_constraintHorizontal_bias="0.0"
        />

    <EditText

        android:id="@+id/correoEditText"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/rounded_white_border"
        android:textSize="14sp"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/correoTextView"
        />

    <TextView

        android:id="@+id/usuarioTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="@string/usuario"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/correoEditText"
        app:layout_constraintHorizontal_bias="0.0"
        />

    <EditText

        android:id="@+id/usuarioEditText"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/rounded_white_border"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/usuarioTextView"
        />

    <Button
        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="33dp"
        android:id="@+id/modificarPerfilButton"
        android:layout_below="@+id/usuarioEditText"
        android:layout_alignRight="@+id/usuarioEditText"
        android:layout_alignEnd="@+id/usuarioEditText" />
</RelativeLayout>
