<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/esquinas"
    android:paddingLeft="10dp">

    <TextView

        android:id="@+id/planificacionPaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="Categoria"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descripcionPaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/planificacionPaTextView"
        android:gravity="center_vertical"
        android:text="descripcion"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/fechaPaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/descripcionPaTextView"
        android:gravity="center_horizontal"
        android:text="Fecha"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/montoPaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/planificacionPaTextView"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="Monto"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recurrenteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fechaPaTextView"
        android:layout_marginRight="11dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="recurrente"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>