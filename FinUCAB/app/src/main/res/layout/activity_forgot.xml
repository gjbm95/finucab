<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.ucab.fin.finucab.activity.RecuperacionActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="61dp"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/tituloRecuperacion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancelar"
        android:layout_alignBaseline="@+id/siguienteButton"
        android:layout_alignBottom="@+id/siguienteButton"
        android:layout_toLeftOf="@+id/siguienteButton"
        android:layout_toStartOf="@+id/siguienteButton" />

    <Button
        android:id="@+id/siguienteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="99dp"
        android:text="@string/siguiente2"
        android:layout_marginRight="85dp"
        android:layout_marginEnd="85dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <fragment
        android:id="@+id/RecoverFragment"
        android:name="com.ucab.fin.finucab.fragment.RespuestaFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:layout="@layout/respuesta_fragment"
        android:layout_above="@+id/cancelButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
