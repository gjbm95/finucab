<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ucab.fin.finucab">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="23" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.InicioActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:icon="@mipmap/indicador" />
        <activity android:name=".activity.RegistroActivity" />
        <activity
            android:name=".activity.PresentacionActivity"
            android:theme="@style/SinBarra">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddCategoryActivity" />

        <activity android:name=".activity.Prueba"></activity>

        <activity android:name=".activity.RecuperacionActivity" />


    </application>

</manifest>